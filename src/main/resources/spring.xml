<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="logger.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean id="client" class="Task1_9.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John"/>
    </bean>

    <bean id="app" class="Task1_9.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileLogger"/>
        <constructor-arg>
            <map>
                <entry key="INFO"
                       value-ref="consoleEventLogger"/>
                <entry key="ERROR"
                       value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="event" class="Task1_9.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

</beans>