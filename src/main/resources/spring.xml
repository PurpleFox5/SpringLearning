<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">

    <import resource="logger.xml"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean id="client" class="Task1_9.Client">
        <constructor-arg value="${id}"/>
        <constructor-arg value="${name}"/>
    </bean>

    <util:map id="loggersMap">
        <entry key="INFO"
               value-ref="consoleEventLogger"/>
        <entry key="ERROR"
               value-ref="combinedEventLogger"/>
    </util:map>

    <bean id="app" class="Task1_9.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileLogger"/>
        <constructor-arg ref="loggersMap"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="event" class="Task1_9.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

</beans>